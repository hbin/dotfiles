# Flush output immediately, even when piped
--flush

# Force color and header, even in less -R.
--color
--color-match=red
--group

# Custom types and abbreviatinos.
--type-set=sass=.sass,.scss
--type-set=coffee=.coffee
--type-set=markdown=.markdown,.md,.mdown
--type-set=cucumber=.feature
--type-set=rdoc=.rdoc

--type-add=ruby=.slim,.haml,.jbuilder,.rabl,.rake
--type-add=html=.htm,.html,.erb
--type-add=css=.sass,.scss
--type-add=js=.coffee

--markdown
--cucumber
--python
--elisp
--lisp
--ruby
--yaml
--html
--css
--js

--ignore-dir=.idea
--ignore-dir=vendor/bundle
--ignore-dir=vendor/jruby-bundle
--ignore-dir=elpa
--ignore-dir=tmp
--ignore-dir=cache
--ignore-dir=log
--ignore-dir=logs
--ignore-dir=.tmp
--ignore-dir=.sass-cache
